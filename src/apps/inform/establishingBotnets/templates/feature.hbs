<hr class="featurette-divisor">

<div class="row featurette">
    <div class="col-md-7 {{#isPushed}} col-md-push-5 {{/isPushed}}">
        <h2 class="featurette-heading">{{heading}}
            <span class="text-muted">{{subHeading}}</span>
        </h2>
        <p class="lead">
            {{#infectionPartial}}
                {{> infection}}
            {{/infectionPartial}}
        </p>
    </div>
    <div class="col-md-5 {{#isPushed}} col-md-pull-7 {{/isPushed}}">
        <img class="featurette-image img-responsive center-block"
             {{#if image}}
            src = "{{image}}"
             {{/if}}
        {{^if image}}
src = "data:image/svg+xml;base64,"
        {{/if}} data-holder-rendered="true">
    </div>
</div>