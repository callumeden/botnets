<h3>{{scrollspyHeading}}</h3>

<div class="scrollspy-container">
    <nav id="{{scrollspyId}}" class="navbar navbar-inverse navbar-static">
        <div class="container-fluid">
            <div class="navbar-header">

                <button class="navbar-toggle collapsed" type="button" data-toggle="collapse"
                        data-target=".scrollspy-navbar"><span
                        class="sr-only">Toggle navigation</span> <span
                        class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <div class="collapse navbar-collapse scrollspy-navbar">
                    <ul data-role="content-links" class="nav navbar-nav">
                        {{#each scrollspyNav}}
                            <li><a href="#{{this.href}}">{{this.title}}</a></li>
                        {{/each}}
                    </ul>
                </div>

            </div>
        </div>
    </nav>

    <div data-spy="scroll" data-offset="0" data-target="#{{scrollspyId}}" class="scrollspy-main">

            {{>illegalActivities}}

    </div>
</div>