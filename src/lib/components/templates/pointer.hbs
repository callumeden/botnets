<div class="col-lg-4 hidden-xs">

    <img class="img-circle"
         {{#if image}}
            src = "{{image}}"
        {{/if}}

        {{^if image}}
         src="data:image/gif;base64,R0lGODlhAQABAIAAAHd3dwAAACH5BAAAAAAALAAAAAABAAEAAAICRAEAOw=="
        {{/if}}

         data-toggle = "tooltip"

         data-placement="top"

         title = "{{imageRef}}"

         alt="Generic placeholder image" width="140" height="140">

    <h2>{{subjectTitle}}</h2>

    <p>{{subjectContent}}</p>

    <p><a class="btn btn-default" data-role="details" data-destination="{{destination}}" role="button">{{buttonText}}</a></p>

</div><!-- /.col-lg-4 -->
